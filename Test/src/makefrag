# Use the new message compiler introduced in OMNeT++ 5.3
#
MSGC:=$(MSGC) --msg6

ifeq ($(PLATFORM),win32.x86_64)
  #
  # on windows we have to link with the ws2_32 (winsock2) library as it is no longer added
  # to the omnetpp system libraries by default (as of OMNeT++ 5.1)
  #
  LIBS += -lws2_32
  DEFINES += -DINET_EXPORT
  ENABLE_AUTO_IMPORT=-Wl,--enable-auto-import
  LDFLAGS := $(filter-out $(ENABLE_AUTO_IMPORT), $(LDFLAGS))

endif

.DEFAULT_GOAL := all

run-2pc: $(TARGET_FILES)
	opp_run -n $(INET_PROJ)/src:. -l $(INET_PROJ)/src/INET$(D) -l ./$(TARGET) 2PC.ini

run-nbac: $(TARGET_FILES)
	opp_run -n $(INET_PROJ)/src:. -l $(INET_PROJ)/src/INET$(D) -l ./$(TARGET) NBAC.ini

run-nbac-cmd: $(TARGET_FILES)
	opp_run -u Cmdenv --cmdenv-express-mode=false -n $(INET_PROJ)/src:. -l $(INET_PROJ)/src/INET$(D) -l ./$(TARGET) NBAC.ini

.PHONY: run
